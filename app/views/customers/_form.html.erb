<%= form_with(
      model: customer,
      id: "dialog_content",
      class: "contents",
      data: { action: "turbo:submit-end->dialog#hide_on_success" }
    ) do |form|
%>
  <div class="bg-white px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
    <h3 class="text-base font-semibold leading-6 text-gray-900">
      <%= form.object.persisted? ? "Kunden bearbeiten" : "Kunden erstellen" %>
    </h3>
    <div class="mt-2 space-y-5">
      <p class="text-sm text-gray-500">
        <% if form.object.persisted? %>
          Hier können Sie den Kunden bearbeiten.
        <% else %>
          Hier können Sie einen neuen Kunden erstellen.
        <% end %>
      </p>

      <%= render "shared/errors", object: customer %>

      <div>
        <%= form.label :name, "Name", class: "block text-sm font-medium leading-6 text-gray-900" %>
        <%= form.text_field :name, autofocus: true, class: "block mt-1 w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
      </div>

      <div>
        <%= form.label :description, "Beschreibung", class: "block text-sm font-medium leading-6 text-gray-900" %>
        <%= form.text_field :description, class: "block mt-1 w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
      </div>
    </div>
  </div>

  <div class="bg-gray-50 px-4 mt-3 py-3 sm:px-6 flex flex-col sm:flex-row-reverse gap-3">
    <button type="submit" class="inline-flex w-full justify-center rounded-md bg-slate-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-slate-500 sm:w-auto cursor-pointer">
      <%= form.object.persisted? ? "Speichern" : "Erstellen" %>
    </button>

    <button type="button" class="inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:w-auto" data-action="dialog#hide">
      Abbrechen
    </button>
  </div>
<% end %>